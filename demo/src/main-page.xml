<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">

    <ActionBar title="Printer demo" icon=""></ActionBar>

    <ScrollView>
        <StackLayout class="p-20">
            <Image id="printerImage" margin="0" src="~/assets/printer.png" width="128" height="128" horizontalAlignment="center" />

            <Button text="Device supports printing?" tap="{{ printingSupported }}" class="button button-a" />

            <Button text="Print an image" tap="{{ printImage }}" class="button button-b" />

            <Button text="Print this screen" tap="{{ printScreen }}" class="button button-b" />

            <Button text="Print PDF" tap="{{ printPDF }}" class="button button-b" />

            <Button text="Print WebView" tap="{{ printWebView }}" class="button button-b" />

            <Button text="Print HtmlView" tap="{{ printHtmlView }}" class="button button-b" />

            <Button text="Print Label" tap="{{ printLabel }}" class="button button-b" />

            <Button text="Print TextView" tap="{{ printTextView }}" class="button button-b" />

            <Button text="Print the 40 lines below" tap="{{ printScreenPortion }}" class="button button-b" />

            <StackLayout id="lines" style="margin:30">
                <Label id="labelView" text="line 1"/>
                <Label text="line 2"/>
                <Label text="line 3"/>
                <Label text="line 4"/>
                <Label text="line 5"/>
                <Label text="line 6"/>
                <Label text="line 7"/>
                <Label text="line 8"/>
                <Label text="line 9"/>
                <Label text="line 10"/>
                <Label text="line 11"/>
                <Label text="line 12"/>
                <Label text="line 13"/>
                <Label text="line 14"/>
                <Label text="line 15"/>
                <Label text="line 16"/>
                <Label text="line 17"/>
                <Label text="line 18"/>
                <Label text="line 19"/>
                <Label text="line 20"/>
                <Label text="line 21"/>
                <Label text="line 22"/>
                <Label text="line 23"/>
                <Label text="line 24"/>
                <Label text="line 25"/>
                <Label text="line 26"/>
                <Label text="line 27"/>
                <Label text="line 28"/>
                <Label text="line 29"/>
                <Label text="line 30"/>
                <Label text="line 31"/>
                <Label text="line 32"/>
                <Label text="line 33"/>
                <Label text="line 34"/>
                <Label text="line 35"/>
                <Label text="line 36"/>
                <Label text="line 37"/>
                <Label text="line 38"/>
                <Label text="line 39"/>
                <Label text="line 40"/>
            </StackLayout>
            <TextView id="textView" text="{{textView}}"/>
            <WebView height="600" id="webView" src="https://www.nativescript.org"/>
            <HtmlView id="htmlView" html="{{htmlView + htmlView + htmlView}}"/>

        </StackLayout>
    </ScrollView>
</Page>
